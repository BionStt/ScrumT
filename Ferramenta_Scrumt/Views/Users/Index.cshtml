@model IEnumerable<Ferramenta_Scrumt.MODEL.Users>

@{
    ViewBag.Title = "Equipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-heading">
    <h3>
        Equipe
    </h3>
    <div class="col-md-10 col-xs-8">
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li>
                <a href="#">Cadastros</a>
            </li>
            <li class="active">Equipe</li>
        </ul>
    </div>
    <div class="col-md-2 col-xs-8">
        <p>
            @Html.ActionLink("Adicionar Membro", "Create", 0, new { @class = "btn btn-primary" })
        </p>
    </div>
    <hr>
</div>
<div class="wrapper">
    <div class="directory-info-row">
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-sm-6">
                <div class="panel">
                    <div class="panel-body">
                   
                        <div class="media">
                            <a class="pull-left" href="#">
                                <img class="thumb media-object" src="http://placehold.it/80x80" alt="">
                            </a>
                            <div class="col-md-7 media-body">
                                <h4>@Html.DisplayFor(model => item.Nome) <span class="text-muted small"> - @Html.DisplayFor(modelItem => item.Nome_Funcao)</span></h4>
                                <address>
                                    <strong>@Html.DisplayFor(modelItem => item.Email)</strong><br>
                                </address>
                            
                            </div>
                             <div class="col-md-2 media-body">
                                 @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-time delete glyphicon glyphicon-trash"})
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        }
            <div class="modal" id="modal">

            </div>
        </div>
    </div>
</div>

