@model Ferramenta_Scrumt.MODEL.ProductBacklog

@{
    ViewBag.Title = "Adicionar Historia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <h3>
        Equipe
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/Backlog/Index">Backlog</a>
        </li>
        <li class="active">Adicionar História</li>
    </ul>

</div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Adicionar Historia
                        </header>
                        <div class="panel-body">
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Historia, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Historia, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Historia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-12">
                                    @Html.LabelFor(model => model.Projeto, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Descricao", (SelectList)ViewBag.Descricao, "Selecione um Projeto", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Projeto, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.Estimativa_Inicio, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Estimativa_Inicio, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Estimativa_Inicio, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.Importancia, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Importancia", (SelectList)ViewBag.Importancia, "Selecione a Importancia", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Importancia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.Aceito, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Aceito", (SelectList)ViewBag.Aceito, "Selecione o Aceite", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Aceito, "", new { @class = "text-danger" })
                                </div>

                            </form>
                            <div class="form-group">
                                <input type="submit" value="Adicionar" class="btn btn-primary" />
                                @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    }

</body>
